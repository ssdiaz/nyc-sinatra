<h1>Create a New Figure</h1>

<form action="/figures" method="POST">
    <label id="figure_name">Figure Name:</label>
    <input type="text" id="figure_name" name="figure[name]">
    <br>

    <h3>Existing Titles</h3>
    <% Title.all.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id %>" value="<%= title.id %>"><%= title.name %></input><br> 
    <% end %>
    <br>
    <h3>Create a New Title</h3>
    <label>Title Name:</label>
    <input type="text" id="new_title" name="title[name]">
    <br>

    <h3>Existing Landmarks</h3>
    <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
    <% end %>
    <br>
    <h3>Create a New Landmark </h3>
    <label>Landmark Name:</label>
    <input type="text" id="new_landmark" name="landmark[name]"><br>
    <label>Landmark Year:</label>
    <input type="text" name="landmark[year_completed]"><br>

    <br>
    <input type="submit" value="Create New Figure">
</form>